@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.Home>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
	Layout = "Master.cshtml";
}

<main>
  <div class="max-w-screen-2xl mx-auto">
    <div class="p-6">
      @* Heading *@
      <h2 class="text-2xl font-bold mb-4">Services</h2>
      
      @* All Card *@
      <div class="text-gray-500 flex flex-wrap">


        @* Cards - Service Forms *@
        <div class="py-3 mr-6">
          <a href="/services">
            <div class="block rounded-lg bg-white shadow-lg max-w-xs p-8 overflow-hidden transform transition duration-300 hover:scale-105 hover:shadow-accentpurple h-full">
              <div class="flex flex-col space-y-4">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" />
                </svg>
                <h5 class="mb-2 text-xl font-bold mt-2">Service Forms</h5>   
                <p>List of Services designed to build and execute SAN and HNAS operations for storage arrays. For example: Provisioning, expansion and decommissioning of the volumes in a storage array with predefined rules and validations.</p>
              </div>
            </div>
          </a>
        </div>
    
    
        @* Cards - Download SRF Template *@
          <div class="py-3 mr-6">
            <a href="/download">
              <div class="block rounded-lg bg-white shadow-lg max-w-xs p-8 overflow-hidden transform transition duration-300 hover:scale-105 hover:shadow-accentpurple h-full">
                <div class="flex flex-col space-y-4">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5M16.5 12L12 16.5m0 0L7.5 12m4.5 4.5V3" />
                  </svg>        
                  <h5 class="mb-2 text-xl font-bold mt-2">Download SRF Template</h5>   
                  <p>This is a sample SRF file containing all the pre-defined input and output fields expected under the particular service. This file can be downloaded and updated to be used under Upload SRF functionality.</p>
                </div>
              </div>
            </a>
          </div>
    
    
        @* Cards - Upload SRF Template *@
          <div class="py-3 mr-6">
            <a href="/upload">
              <div class="block rounded-lg bg-white shadow-lg max-w-xs p-8 overflow-hidden transform transition duration-300 hover:scale-105 hover:shadow-accentpurple h-full">
                <div class="flex flex-col space-y-4">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5m-13.5-9L12 3m0 0l4.5 4.5M12 3v13.5" />
                  </svg>                     
                  <h5 class="mb-2 text-xl font-bold mt-2">Upload SRF</h5>   
                  <p>This facility allows us to upload the SRF file with input data corresponding to the Services. It can be used instead of using Service Forms when bulk operations are to be performed.</p>
                </div>
              </div>
            </a>
          </div>
    
    
        @* Cards - Logs *@
          <div class="py-3 mr-6">
            <a href="/service-logs">
              <div class="block rounded-lg bg-white shadow-lg max-w-xs p-8 overflow-hidden transform transition duration-300 hover:scale-105 hover:shadow-accentpurple h-full">
                <div class="flex flex-col space-y-4">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
                    <path d="M9 18H5C3.89543 18 3 17.1046 3 16V6C3 4.89543 3.89543 4 5 4H17C18.1046 4 19 4.89543 19 6V8"/>
                    <path d="M4 8H20"/>
                    <path d="M4 13H9"/>
